{
  "version": "2.0.0",
  "options": {
    "env": {
      "PATH": "${env:PATH}"
    }
  },
  "tasks": [
    // {
    //   "label": "Build",
    //   "type": "shell",
    //   "command": "scripts/build.sh ${input:buildMode}",
    //   "options": {
    //     "cwd": "${workspaceFolder}"
    //   },
    //   "group": {
    //     "kind": "build",
    //     "isDefault": true
    //   }
    // },
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build",
      "label": "rust: cargo build",
    },
    {
      "type": "cargo",
      "command": "build",
      "args": [
        "--release"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build",
      "label": "rust: cargo build release"
    },
    {
      "label": "Build & Flash",
      "type": "shell",
      "command": "scripts/flash.sh ${input:buildMode}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "buildMode",
      "description": "Select the build mode:",
      "options": [
        "release",
        "debug"
      ],
      "default": "release"
    }
  ]
}